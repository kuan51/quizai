# =============================================================================
# QuizAI Environment Variables
# Copy this file to .env.local and fill in the values
# =============================================================================

# --- Authentication (Required) ---
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=
# Set to your deployment URL (e.g., https://quizai.example.com)
# On Vercel, this is auto-detected from VERCEL_ENV (see src/lib/auth-url.ts)
NEXTAUTH_URL=http://localhost:3000

# Comma-separated emails allowed to sign in
# Use "*" to allow all OAuth users (required in production)
# Requires server restart after changes
AUTHORIZED_EMAILS=

# --- OAuth Providers (at least one required) ---

# Google OAuth - https://console.developers.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Discord OAuth - https://discord.com/developers/applications
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# --- AI Providers (at least one required) ---

# Anthropic - https://console.anthropic.com/
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI - https://platform.openai.com/
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-nano

# Default AI provider: "anthropic" | "openai" | "claude-code"
DEFAULT_AI_PROVIDER=anthropic

# --- Database (Required) ---
# PostgreSQL connection URL used by @vercel/postgres SDK and Drizzle migrations
# Format: postgresql://user:password@host:port/database
# Vercel automatically sets this when you add Vercel Postgres storage
POSTGRES_URL=

# --- Logging (Optional) ---
# Level: fatal | error | warn | info | debug | trace
LOG_LEVEL=info

# --- Environment ---
NODE_ENV=development
