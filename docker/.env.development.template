# =============================================================================
# QuizAI Docker Development Environment
# Copy to .env.development and fill in the values
# =============================================================================

# --- App ---
NODE_ENV=development
PORT=3000

# --- Authentication (Required) ---
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# Comma-separated emails allowed to sign in (leave empty to allow all in dev)
AUTHORIZED_EMAILS=

# --- OAuth Providers (at least one required) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# --- AI Providers (at least one required) ---
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
DEFAULT_AI_PROVIDER=anthropic

# --- Database ---
DATABASE_URL=postgresql://quizai:quizai_dev_password@db:5432/quizai

# --- Database (PostgreSQL) ---
POSTGRES_DB=quizai
POSTGRES_USER=quizai
POSTGRES_PASSWORD=quizai_dev_password

# --- Logging ---
LOG_LEVEL=debug
